@model IList<SharedWeekends.MVC.ViewModels.WeekendViewModel>

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            @Html.DisplayFor(m => m[i].PictureUrl)
            <div class="caption">
                <div class="col-md-12">
                    <span class="pull-right">@Html.DisplayFor(m => m[i].PricePerPerson)</span>
                </div>
                <div class="col-md-12">
                    <h4>
                        <a href="~/Details/Index/@Model[i].Id">@Model[i].Title</a>
                    </h4>
                    <p>@Html.DisplayFor(m => m[i].Content)</p>
                </div>

            </div>
            <div class="ratings">
                @Html.DisplayFor(m => m[i].LikesCount)
                @Html.DisplayFor(m => m[i].Rating)
            </div>
        </div>
    </div>
}


