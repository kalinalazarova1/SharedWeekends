@model IEnumerable<SharedWeekends.MVC.ViewModels.WeekendViewModel>

@if (Model.Count() > 0) {
<table class="table">
    <tr>
        <th>
            Picture
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            Reviews
        </th>
        <th>
            Published
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.PictureUrl != null)
            {
                <img src="@item.PictureUrl" width="80" alt="Photo">
            }
            else
            {
                <img src="~/Content/default.jpg" width="80" alt="Photo" />
            }
        </td>
        <td>
            <a href="Details/Index/@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LikesCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            @Html.ActionLink("Details", "Index/" + item.Id, "Details")
        </td>
    </tr>
}

</table>
}
else
{
<div>No Shared Weekends</div>
}